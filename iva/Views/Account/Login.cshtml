@{
    Layout = null;
    ViewBag.Title = "Login";
}
@model IEnumerable<CompanyViewModel>

<head>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <title> @ViewData["Title"] - IvaTechnos</title>
    <link rel="icon" sizes="180x180" type="image/x-icon" href="./assets/logo.png">
    <style>
    </style>
</head>

  <body style="background-image: url('@Url.Content("~/assets/companyPicture1.jpg")');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        background-attachment: fixed;">
    <div class="container">
        <div class="login-container">
            <div id="output"></div>
            <div class="avatar">
                <img src="./assets/logo.png" style="width: -webkit-fill-available; height: inherit;">
            </div>
            <div class="form-box">

                    <form method="post" action="Login">
                    <div style="width: 100%; max-width: 400px; margin: 0 auto; padding: 10px;  ">
                        <div style="margin-bottom: 15px;">
                            <input type="text"
                                   name="username"
                                   style="width: 100%; height: 40px; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px; background: #fafafa;"
                                   placeholder="Username" />
                        </div>

                        <div style="margin-bottom: 15px;">
                            <input type="password"
                                   name="password"
                                   style="width: 100%; height: 40px; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px; background: #fafafa;"
                                   placeholder="Password" />
                        </div>

                        <div style="margin-bottom: 15px;">
                            <select name="companyId"
                                    style="width: 100%; height: 40px; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px; background: #fafafa;"
                                    aria-label="Select Company">
                                <option style="font-size: 16px;" value="">-- Select a company --</option>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var company in Model)
                                    {
                                        <option style="font-size: 16px;" value="@company.Id">@company.CompanyName</option>
                                    }
                                }
                                else
                                {
                                    <option style="font-size: 16px;" disabled>No companies available</option>
                                }
                            </select>
                        </div>
                    </div>

                    <button type="submit" class="btn rounded-button" style="margin-top:10px">Login</button>
                    <br />
                    <div class="text-danger" style="color:red;margin-top:10px">
                        @if (ViewBag.Error != null)
                        {
                            <div style="color: red; margin-bottom: 1rem; text-align: center;">@ViewBag.Error</div>
                        }
                    </div>
                </form>
            </div>
        </div>

    </div>
</body>

